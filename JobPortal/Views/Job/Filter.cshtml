                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        @foreach (var item in Model)
                        {
                            if (item.EndDate > DateTime.Now && item.Status == JobStatus.Open)
                            {
                                <div class="job-item p-4 mb-4">
                                    <div class="row g-4">

                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid border rounded" src="@item.Icon" alt="" style="width: 80px; height: 80px;">
                                            <div class="text-start ps-4">
                                                <h5 class="mb-3">@item.Title</h5>
                                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.Location</span>
                                                <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@item.Type</span>
                                                <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$@item.StartBudget - $@item.EndBudget</span>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-3">

                                                <a class="btn btn-primary" asp-controller="Applications" asp-action="create" asp-route-Id="@item.Id">Apply Now</a>
                                                <a class="btn btn-success detailBtn" asp-action="Details" asp-route-Id="@item.Id">View Detail</a>
                                            </div>
                                            <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: @item.EndDate.ToShortDateString()</small>
                                        </div>

                                    </div>
                                </div>

                            }

                        }


                        <a class="btn btn-primary py-3 px-5" href="">Browse More Jobs</a>
                    </div>
