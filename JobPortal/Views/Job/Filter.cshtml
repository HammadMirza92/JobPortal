<div class="container py-5">
    <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Filter Jobs</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="formContainer">
                <form asp-controller="Job" asp-action="Filter">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label class="form-label">Name</label>
                        <input name="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Job Status</label>
                        <select name="Status" asp-items="@Html.GetEnumSelectList<JobStatus>()" class="form-select"></select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Type</label>
                        <select name="Type" asp-items="@Html.GetEnumSelectList<JobType>()" class="form-select"></select>

                    </div>

                    <div class="form-group">
                        <label class="form-label">Start Budget</label>
                        <input type="number" name="StartBudget" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="form-label">End Budget</label>
                        <input type="number" name="EndBudget" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="form-label">Vacancy</label>
                        <input type="number" name="Vacancy" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="form-label">Location</label>
                        <input name="Location" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input type="datetime-local" name="StartDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">EndDate</label>
                        <input type="datetime-local" name="EndDate" class="form-control" />
                    </div>
                    <div class="form-group">

                        <input class="btn-global" type="submit" />

                    </div>
                </form>
            </div>
        </div>
